---
import Layout from "../layouts/Layout.astro";
import App from "../components/App.svelte";
---

<Layout title="Doc O'llama - Preguntale lo que necesites a una de las mentes mas prodigiosas de la actualidad">
    <div class="flex justify-center items-center min-h-dvh bg-linear-to-t from-sky-500 to-indigo-500"><!-- bg-yellow-500/75 -->

      <section class="container p-10 flex items-center gap-7 shadow-2xl bg-slate-300 h-fit rounded-2xl"> <!-- bg-slate-600 -->
    
        <div class="flex flex-col items-center gap-7">
          <img src="/llama-1.jpg" alt="Imagen del Doctor O'llama" class="rounded-full aspect-square max-h-[500px]">
          <h1 class="text-6xl font-bold text-center">Preguntale al Doc O'llama</h1>
        </div>
        
        <main class="flex w-full p-10 min-h-[500px] items-center justify-center bg-slate-400/50 shadow-2xl">
          <App client:idle />
        </main>
        
      </section>
      
    </div>
</Layout>